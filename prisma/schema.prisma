generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            Int        @id @default(autoincrement())
  name          String
  imgUrl        String
  description   String
  price         Int
  created_at    DateTime
  modified_at   DateTime
  stripePriceId String?    @unique
  CartItem      CartItem[]
}

model CartItem {
  id            Int      @id @default(autoincrement())
  quantity      Int
  productId     Int
  product       Product  @relation(fields: [productId], references: [id])
  created_at    DateTime
  modified_at   DateTime
  order         Order?   @relation(fields: [orderId], references: [id])
  orderId       Int?
}

model Order {
  id          Int        @id @default(autoincrement())
  status      OrderType
  user_id     User      @relation(fields: [user_id], references: [id])
  cart_items  CartItem[]
  created_at  DateTime
  modified_at DateTime
  total_price Int
}

enum OrderType {
  PROCESSING
  DELIVERED
  SHIPPING
  CANCELED
}
